= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age

  .field
    = f.label :職場
    = f.text_field :office_prefecture_id
    = f.text_field :office_municipality

    = f.label :自宅
    = f.text_field :home_prefecture_id
    = f.text_field :home_municipality

  .actions
    = f.submit 'Save'
